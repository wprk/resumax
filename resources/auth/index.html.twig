{% extends "@templates/base.html.twig" %}

{% block title %}Login{% endblock %}

{%- block content -%}
	<div id="content" class="container">
		<div class="row">

			<div class="col-sm-6">
				<h2>Member login</h2>
				{{ form_start(loginForm, {'attr': {'class': 'form-horizontal'}}) }}
				{{ form_errors(loginForm) }}
					<div class="form-group">
						<div class="text-danger form-error">
							{{ form_errors(loginForm.email) }}
						</div>
						<div class="col-sm-3 col-sm-offset-1">
							{{ form_label(loginForm.email) }}
						</div>
						<div class="col-sm-6">
							{{ form_widget(loginForm.email, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="text-danger form-error">
							{{ form_errors(loginForm.password) }}
						</div>
						<div class="col-sm-3 col-sm-offset-1">
							{{ form_label(loginForm.password) }}
						</div>
						<div class="col-sm-6">
							{{ form_widget(loginForm.password, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-9 col-sm-offset-4">
							<button type="submit" class="pull-left btn btn-primary">Login</button>
						</div>
					</div>
				{{ form_end(loginForm) }}
			</div>

			<div class="col-sm-6">
				<h2>Not a member yet? Join now</h2>
				{{ form_start(registerForm, {'attr': {'class': 'form-horizontal'}}) }}
				{{ form_errors(registerForm) }}
					<div class="form-group">
						<div class="text-danger form-error">
							{{ form_errors(registerForm.email) }}
						</div>
						<div class="col-sm-3 col-sm-offset-1">
							{{ form_label(registerForm.email) }}
						</div>
						<div class="col-sm-6">
							{{ form_widget(registerForm.email, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="text-danger form-error">
							{{ form_errors(registerForm.password) }}
						</div>
						<div class="col-sm-3 col-sm-offset-1">
							{{ form_label(registerForm.password) }}
						</div>
						<div class="col-sm-6">
							{{ form_widget(registerForm.password, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						<div class="col-sm-9 col-sm-offset-4">
							<button type="submit" class="pull-left btn btn-primary">Register</button>
						</div>
					</div>
				{{ form_end(registerForm) }}
			</div>

		</div>
	</div> <!-- /container -->
{%- endblock -%}